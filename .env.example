# .env.example — copy to .env and fill values
# Basic
DJANGO_DEBUG=true
DJANGO_SECRET_KEY=change_me_dev_key
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1
DJANGO_CSRF_TRUSTED_ORIGINS=http://localhost,http://127.0.0.1

# Database (SQLite path; optional — defaults to BASE_DIR/db.sqlite3)
# On Windows use forward slashes or full path
# SQLITE_NAME=C:/Users/you/path/to/db.sqlite3

# Email (console backend in dev; smtp in prod)
# For dev keep console backend:
EMAIL_BACKEND=
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=true
SMTP_USER=
SMTP_PASS=
DEFAULT_FROM_EMAIL=

# Admin / app defaults
ADMIN_PASSWORD=admin123
DEFAULT_LANGUAGE=pl

# Production security (only meaningful with DJANGO_DEBUG=false)
SECURE_SSL_REDIRECT=true
SECURE_HSTS_SECONDS=3600
