# .env.example — copy to .env and fill values
# Basic
DJANGO_DEBUG=true
DJANGO_SECRET_KEY=change_me_dev_key
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1
DJANGO_CSRF_TRUSTED_ORIGINS=http://localhost,http://127.0.0.1
SESSION_COOKIE_AGE=3600
DJANGO_CACHE_BACKEND=django.core.cache.backends.filebased.FileBasedCache
DJANGO_CACHE_LOCATION=cache

# Media / storage
MEDIA_ROOT=media
MEDIA_URL=/media/
DEFAULT_FILE_STORAGE=django.core.files.storage.FileSystemStorage

# Database (SQLite path; optional — defaults to BASE_DIR/db.sqlite3)
# On Windows use forward slashes or full path
# SQLITE_NAME=C:/Users/you/path/to/db.sqlite3

# PostgreSQL (Render / production)
# DATABASE_URL=postgres://user:pass@host:5432/dbname
# DB_CONN_MAX_AGE=600
# DB_SSL_REQUIRE=true

# Email (console backend in dev; smtp in prod)
# For dev keep console backend:
EMAIL_BACKEND=
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=true
SMTP_USER=
SMTP_PASS=
DEFAULT_FROM_EMAIL=

# Notifications
COMPANY_NOTIFICATION_RECIPIENTS={"default": ["alerts@example.com"]}

# Admin / app defaults
ADMIN_PASSWORD=admin123
DEFAULT_LANGUAGE=pl
CONTACT_FORM_THROTTLE_SECONDS=30
CONTACT_FORM_RATE_LIMIT_PREFIX=contact_form
CONTACT_ACCESS_TOKEN_TTL_HOURS=72
ATTACH_ALLOWED_EXTENSIONS=.pdf,.png,.jpg,.jpeg,.txt
ATTACH_SCAN_COMMAND=

# Production security (only meaningful with DJANGO_DEBUG=false)
SECURE_SSL_REDIRECT=true
SECURE_HSTS_SECONDS=3600

# Monitoring
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.0
